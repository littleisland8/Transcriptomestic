configfile: "config/config.yaml"

include: "rules/fastqc.smk"
include: "rules/fastp.smk"
include: "rules/STAR.smk"
include: "rules/htseq.smk"
include: "rules/DESeqFromHTSeqCount.smk"

rule fastqc:
	input:
		expand(f"qc/{{sample}}_{{strand}}_fastqc.html", sample=config["samples"].values(), strand=config["strand"].values()),
		expand(f"qc/{{sample}}_{{strand}}_tr_fastqc.html", sample=config["samples"].values(), strand=config["strand"].values()),

rule STAR:
	input:
		directory("resources/GRCh38_full_analysis_set_plus_decoy_hla"),
		expand(f"alignments/{{sample}}.Aligned.out.srt.bam.bai", sample=config["samples"].values())

rule Htseq:
	input:
		expand(f"count/{{sample}}.gene.count", sample=config["samples"].values())

rule STAR_HTSeq:
	input:
		directory(f"STAR_HTseq")